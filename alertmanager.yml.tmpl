global:
  smtp_smarthost: '@SMTP_SMARTHOST@'
  smtp_from: '@SMTP_FROM@'
  smtp_auth_username: '@SMTP_LOGIN@'
  smtp_auth_password: '@SMTP_PASSWORD@'

route:
 group_by: [cluster]
 group_wait: 30s
 group_interval: 5m
 repeat_interval: 3h
 receiver: email
 routes:
  - match:
    severity: page-high
    receiver: pagerduty-high-priority
  - match:
    severity: page-low
    receiver: pagerduty-low-priority

receivers:
- name: email
  email_configs:
  - to: '@SMTP_TO@'
- name: pagerduty-high-priority
  pagerduty_configs:
  - service_key: '@PAGERDUTY_HIGH_PRIORITY_KEY@'
- name: pagerduty-low-priority
  pagerduty_configs:
  - service_key: '@PAGERDUTY_LOW_PRIORITY_KEY@'
