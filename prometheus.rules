ALERT InstanceDown
  IF up == 0
  FOR 5m
  LABELS { severity = "page" }
  ANNOTATIONS {
    summary = "Instance {{ $labels.instance }} down",
    description = "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 5 minutes.",
  }
ALERT InstanceLowDisk
  IF (node_filesystem_avail{device=~"/.*", mountpoint!~"/var/lib/mesos/slave/.*"} / node_filesystem_size * 100) < 10
  FOR 5m
  LABELS { severity = "page" }
  ANNOTATIONS {
    summary = "Instance {{$labels.host}}: low disk space",
    description = "{{$labels.host}} has less than 10% free disk space",
  }
